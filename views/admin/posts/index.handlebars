<h1>All posts</h1>
<table class="table table-hover table responsive">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Body</th>
            <th>Status</th>
            <th class="text-center">Comments</th>
            <th class="text-right">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
            <tr>
                <td>{{@index}}</td>
                <td>{{title}}</td>
                <td>{{body}}</td>
                <td>{{status}}</td>
                <td class="text-center"><i class="fa fa-futbol-o text-center {{#if allowComments}}text-success{{else}}text-danger{{/if}}"></i></td>
                <td>
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-info" style="float: inline-end;"><i class="fa fa-edit"></i>Edit</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>